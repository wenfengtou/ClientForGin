<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_pen_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/black"
        android:padding="@dimen/sw_2dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sw_2dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_pen_color"
        android:layout_width="@dimen/sw_365dp"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/sw_5dp"
        android:paddingBottom="@dimen/sw_5dp"/>
</LinearLayout>
