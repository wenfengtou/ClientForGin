<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_sketch_menu"
    android:layout_width="wrap_content"
    android:background="@color/whiteboard_sketch_menu_background"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_exit_sketch"
        android:visibility="visible"
        android:layout_width="@dimen/sw_22dp"
        android:layout_height="@dimen/sw_22dp"
        app:layout_constraintTop_toTopOf="@+id/ll_pen"
        app:layout_constraintBottom_toBottomOf="@+id/ll_pen"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@mipmap/whiteboard_ic_exit_unpressed"/>

    <LinearLayout
        android:id="@+id/ll_pen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_exit_sketch"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_pen"
            android:layout_width="@dimen/sw_22dp"
            android:layout_height="@dimen/sw_22dp"
            android:background="@mipmap/whiteboard_ic_pen_unpressed"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_expand"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/ll_pen"
        app:layout_constraintTop_toTopOf="@+id/ll_pen"
        app:layout_constraintBottom_toBottomOf="@+id/ll_pen">

        <LinearLayout
            android:id="@+id/ll_eraser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_eraser"
                android:layout_width="@dimen/sw_22dp"
                android:layout_height="@dimen/sw_22dp"
                android:background="@mipmap/whiteboard_ic_eraser_unpressed"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/iv_clear_sketch"
            android:layout_width="@dimen/sw_22dp"
            android:layout_height="@dimen/sw_22dp"
            app:layout_constraintLeft_toRightOf="@id/ll_eraser"
            app:layout_constraintTop_toTopOf="@id/ll_eraser"
            app:layout_constraintBottom_toBottomOf="@id/ll_eraser"
            android:background="@mipmap/whiteboard_ic_trash_unpressed"/>


        <ImageView
            android:id="@+id/iv_save_sketch"
            android:layout_width="@dimen/sw_22dp"
            android:layout_height="@dimen/sw_22dp"
            app:layout_constraintLeft_toRightOf="@id/iv_clear_sketch"
            app:layout_constraintTop_toTopOf="@id/ll_eraser"
            app:layout_constraintBottom_toBottomOf="@id/ll_eraser"
            android:background="@mipmap/whiteboard_ic_save_unpressed"/>

        <ImageView
            android:id="@+id/iv_undo"
            android:layout_width="@dimen/sw_22dp"
            android:layout_height="@dimen/sw_22dp"
            app:layout_constraintLeft_toRightOf="@id/iv_save_sketch"
            app:layout_constraintTop_toTopOf="@id/ll_eraser"
            app:layout_constraintBottom_toBottomOf="@id/ll_eraser"
            android:background="@mipmap/whiteboard_ic_undo_unpressed"/>

        <ImageView
            android:id="@+id/iv_redo"
            android:layout_width="@dimen/sw_22dp"
            android:layout_height="@dimen/sw_22dp"
            app:layout_constraintLeft_toRightOf="@id/iv_undo"
            app:layout_constraintTop_toTopOf="@id/ll_eraser"
            app:layout_constraintBottom_toBottomOf="@id/ll_eraser"
            android:background="@mipmap/whiteboard_ic_redo_unpressed"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/iv_expand"
        android:visibility="visible"
        android:layout_width="@dimen/sw_22dp"
        android:layout_height="@dimen/sw_22dp"
        app:layout_constraintLeft_toRightOf="@+id/cl_expand"
        app:layout_constraintTop_toTopOf="@+id/cl_expand"
        app:layout_constraintBottom_toBottomOf="@+id/cl_expand"
        android:background="@mipmap/whiteboard_ic_pen_unpressed"/>

</androidx.constraintlayout.widget.ConstraintLayout>
