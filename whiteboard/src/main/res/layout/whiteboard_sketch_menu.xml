<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_sketch_menu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_exit_sketch"
        android:visibility="visible"
        android:layout_width="@dimen/sw_50dp"
        android:layout_height="@dimen/sw_50dp"
        app:layout_constraintTop_toTopOf="@+id/ll_pen"
        app:layout_constraintBottom_toBottomOf="@+id/ll_pen"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/whiteboard_ic_exit"/>

    <LinearLayout
        android:id="@+id/ll_pen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_exit_sketch"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_pen_up_triangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/whiteboard_inverted_triangle"
            />

        <ImageView
            android:id="@+id/iv_pen"
            android:layout_width="@dimen/sw_50dp"
            android:layout_height="@dimen/sw_50dp"
            android:background="@drawable/whiteboard_ic_pen_unpressed"/>

        <ImageView
            android:id="@+id/iv_pen_down_triangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/whiteboard_regular_triangle"
            />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_expand"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/ll_pen"
        app:layout_constraintTop_toTopOf="@+id/ll_pen"
        app:layout_constraintBottom_toBottomOf="@+id/ll_pen">

        <LinearLayout
            android:id="@+id/ll_eraser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_eraser_up_triangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/whiteboard_inverted_triangle"
                />

            <ImageView
                android:id="@+id/iv_eraser"
                android:layout_width="@dimen/sw_50dp"
                android:layout_height="@dimen/sw_50dp"
                android:background="@drawable/whiteboard_ic_eraser_unpressed"/>

            <ImageView
                android:id="@+id/iv_eraser_down_triangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/whiteboard_regular_triangle"
                />
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_clear_sketch"
            android:layout_width="@dimen/sw_50dp"
            android:layout_height="@dimen/sw_50dp"
            app:layout_constraintLeft_toRightOf="@id/ll_eraser"
            app:layout_constraintTop_toTopOf="@id/ll_eraser"
            app:layout_constraintBottom_toBottomOf="@id/ll_eraser"
            android:background="@drawable/whiteboard_ic_trash"/>


        <ImageView
            android:id="@+id/iv_save_sketch"
            android:layout_width="@dimen/sw_50dp"
            android:layout_height="@dimen/sw_50dp"
            app:layout_constraintLeft_toRightOf="@id/iv_clear_sketch"
            app:layout_constraintTop_toTopOf="@id/ll_eraser"
            app:layout_constraintBottom_toBottomOf="@id/ll_eraser"
            android:background="@drawable/whiteboard_ic_save"/>

        <ImageView
            android:id="@+id/iv_undo"
            android:layout_width="@dimen/sw_50dp"
            android:layout_height="@dimen/sw_50dp"
            app:layout_constraintLeft_toRightOf="@id/iv_save_sketch"
            app:layout_constraintTop_toTopOf="@id/ll_eraser"
            app:layout_constraintBottom_toBottomOf="@id/ll_eraser"
            android:background="@drawable/whiteboard_ic_undo"/>

        <ImageView
            android:id="@+id/iv_redo"
            android:layout_width="@dimen/sw_50dp"
            android:layout_height="@dimen/sw_50dp"
            app:layout_constraintLeft_toRightOf="@id/iv_undo"
            app:layout_constraintTop_toTopOf="@id/ll_eraser"
            app:layout_constraintBottom_toBottomOf="@id/ll_eraser"
            android:background="@drawable/whiteboard_ic_redo"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/iv_expand"
        android:visibility="visible"
        android:layout_width="@dimen/sw_50dp"
        android:layout_height="@dimen/sw_50dp"
        app:layout_constraintLeft_toRightOf="@+id/cl_expand"
        app:layout_constraintTop_toTopOf="@+id/cl_expand"
        app:layout_constraintBottom_toBottomOf="@+id/cl_expand"
        android:background="@drawable/whiteboard_ic_expand"/>

</androidx.constraintlayout.widget.ConstraintLayout>
