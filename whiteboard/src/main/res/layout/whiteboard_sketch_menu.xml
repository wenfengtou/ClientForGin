<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_sketch_menu"
    android:layout_width="wrap_content"
    android:background="@color/whiteboard_sketch_menu_background"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_pen"
        android:layout_width="@dimen/sw_22dp"
        android:layout_height="@dimen/sw_22dp"
        android:background="@mipmap/whiteboard_ic_pen_unpressed"/>


    <ImageView
        android:id="@+id/iv_eraser"
        android:layout_width="@dimen/sw_22dp"
        android:layout_height="@dimen/sw_22dp"
        android:background="@mipmap/whiteboard_ic_eraser_unpressed"/>

    <ImageView
        android:id="@+id/iv_clear_sketch"
        android:layout_width="@dimen/sw_22dp"
        android:layout_height="@dimen/sw_22dp"
        android:background="@mipmap/whiteboard_ic_trash_unpressed"/>

    <ImageView
        android:id="@+id/iv_save_sketch"
        android:layout_width="@dimen/sw_22dp"
        android:layout_height="@dimen/sw_22dp"
        android:background="@mipmap/whiteboard_ic_save_unpressed"/>

    <ImageView
        android:id="@+id/iv_undo"
        android:layout_width="@dimen/sw_22dp"
        android:layout_height="@dimen/sw_22dp"
        android:background="@mipmap/whiteboard_ic_undo_unpressed"/>

    <ImageView
        android:id="@+id/iv_redo"
        android:layout_width="@dimen/sw_22dp"
        android:layout_height="@dimen/sw_22dp"
        android:background="@mipmap/whiteboard_ic_redo_unpressed"/>

    <ImageView
        android:id="@+id/iv_exit_sketch"
        android:layout_width="@dimen/sw_22dp"
        android:layout_height="@dimen/sw_22dp"
        android:background="@mipmap/whiteboard_ic_exit_unpressed"/>
</LinearLayout>
